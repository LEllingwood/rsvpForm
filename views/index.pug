html
    head      
        title= title
        //- script(src="/")

    body
        h1= "RSVP, please."
        
        form(action = "/rsvpSubmitted", method = "POST", id="rsvpForm")
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='first and last' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for="attending") Attending
            input(type="radio", name="attending", value ="1")
            label(for="notAttending") Not attending
            input(type="radio", name="attending", value="0")
          div.form-group
            label(for="numberOfGuests")
            select(name="numberOfGuests")
              option(value=0)="0"
              option(value=1)="1"
              option(value=2)="2"
              option(value=3)="3"
              option(value=4)="4"
              option(value=5)="5"
              option(value=6)="6"
              option(value=7)="7"
              option(value=8)="8"

            button(type="submit") Send the RSVP
